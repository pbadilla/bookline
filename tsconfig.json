{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // enable strict mode for safety
    "noEmit": true, // Next.js handles the compilation
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true, // Next.js handles JSX compilation
    "incremental": true, // faster incremental builds
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ] // path alias for your components/data
    },
    "plugins": [
      {
        "name": "next"
      } // Next.js TypeScript plugin
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
