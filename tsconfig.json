{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],

    // ✅ ESM-friendly settings
    "module": "esnext",
    "moduleResolution": "bundler", // ← Switch from "node" to "bundler" for better ESM + Vite interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // Helps avoid ESM import edge cases

    // ✅ Safe and standard build flags
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,

    // ✅ Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // ✅ Next.js plugin
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "vitest.config.mts"  ],
  "exclude": ["node_modules"]
}
